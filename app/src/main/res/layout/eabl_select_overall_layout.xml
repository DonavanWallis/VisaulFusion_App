<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/managment_select_overall_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.example.donavan.visaulfusion.EablSelectOverall">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#636363"

            android:layout_marginBottom="10dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp">



            <RadioButton
                android:text="Tier1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/radioButton1"
                android:layout_weight="1"
                android:textColor="#ffffff"
                />
            <RadioButton
                android:text="Tier2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/radioButton2"
                android:layout_weight="1"
                android:textColor="#ffffff"/>
            <RadioButton
                android:text="Essentials"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/radioButton3"
                android:layout_weight="1"
                android:textColor="#ffffff"/>


        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="20dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">



            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                >

                <Button
                    android:text="VALIDATED STORES"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/button3"
                    android:textSize="15sp"
                    android:textColor="#000000"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:paddingLeft="5dp"
                    android:layout_marginBottom="5dp"
                    android:drawableRight="@drawable/plus"
                    android:paddingRight="5dp"
                    android:onClick="viewReports"/>




            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <Button
                    android:text="STORES AWAITING TSS"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/button2"
                    android:textSize="15sp"
                    android:textColor="#000000"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:paddingLeft="5dp"
                    android:layout_marginBottom="5dp"
                    android:drawableRight="@drawable/plus"
                    android:paddingRight="5dp"
                    android:onClick="viewReports"/>



            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                >

                <Button
                    android:text="STORES TSS COMPLETED"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/button4"
                    android:textSize="15sp"
                    android:textColor="#000000"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:paddingLeft="5dp"
                    android:layout_marginBottom="5dp"
                    android:drawableRight="@drawable/plus"
                    android:paddingRight="5dp"
                    android:onClick="viewReports"/>



            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                >

                <Button
                    android:text="STORES AWAITING DISPATCH"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/button5"
                    android:textSize="15sp"
                    android:textColor="#000000"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:paddingLeft="5dp"
                    android:layout_marginBottom="5dp"
                    android:drawableRight="@drawable/plus"
                    android:paddingRight="5dp"
                    android:onClick="viewReports"/>



            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                >

                <Button
                    android:text="STORES DISPATCHED"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/button6"
                    android:textSize="15sp"
                    android:textColor="#000000"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:paddingLeft="5dp"
                    android:layout_marginBottom="5dp"
                    android:drawableRight="@drawable/plus"
                    android:paddingRight="5dp"
                    android:onClick="viewReports"/>



            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                >

                <Button
                    android:text="STORES AWAITING INSTALLATION"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/button7"
                    android:textSize="15sp"
                    android:textColor="#000000"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:paddingLeft="5dp"
                    android:layout_marginBottom="5dp"
                    android:drawableRight="@drawable/plus"
                    android:paddingRight="5dp"
                    android:onClick="viewReports"/>


            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                >

                <Button
                    android:text="STORES INSTALLED"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/button8"
                    android:textSize="15sp"
                    android:textColor="#000000"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:paddingLeft="5dp"
                    android:layout_marginBottom="5dp"
                    android:drawableRight="@drawable/plus"
                    android:paddingRight="5dp"
                    android:onClick="viewReports"/>


            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
